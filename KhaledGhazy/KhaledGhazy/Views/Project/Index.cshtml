@model List<Project>
<link rel="stylesheet" href="/css/Project.css"  />

<main class="main" style="background-color: #1e2124; color: white;">

    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 style="color: #4CAF50; font-weight: bold;">Projects</h1> <!-- الكلمة صح وبالأخضر -->
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Page Title -->
    <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">
        <div class="container">
            <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                    @foreach (var project in Model)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                            <div class="portfolio-content h-100 card-animate">
                                <img src="@project.Image" class="img-fluid" alt="" style="height:250px; width:100%; object-fit:cover;">
                                <div class="portfolio-info">
                                    <h4>@project.ProjectName</h4>
                                    <p>@project.Description</p>
                                    @* <a href="@project.imagePath" title="Preview" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a> *@
                                    <a href="@project.GitHubLink" title="GitHub" class="details-link" target="_blank"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        </div>

                        <!-- End Portfolio Item -->
                    }
                </div>
            </div>
        </div>
    </section>
</main>

